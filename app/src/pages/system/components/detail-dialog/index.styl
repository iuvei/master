      display flex
      justify-content space-between
      padding 30px 25px

      .wrap
        position relative

        .opcity
          position absolute
          width 100%
          height 100%
          z-index 1000000

      .type-1
        font-size 14px

        .key
          line-height 20px
          word-break break-all

        .content
          margin-left 10px
          font-weight bold

      .left, .right
        width 50%
        margin 0 auto

        .el-form-item
          margin-bottom 0

      .table
        border 1px solid #000000
        margin auto

        tr td
          width 200px
          height 30px
          line-height 30px
          border-right 1px solid #c5c5c5
          border-bottom 1px solid #c5c5c5
          text-align center
          color #000000
          word-break break-all
          padding 0 4px

          &:last-child
            border-right 0

          &:first-child
