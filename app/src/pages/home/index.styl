.home
  position absolute
  top 0
  bottom 0
  width 100%

  .fade-enter-active
    transition all 0.5s
    transition-delay 0.5s

  .fade-leave-active
    transition all 0.5s

  .fade-enter, .fade-leave-active
    opacity 0

  .main
    display flex
    position absolute
    top 44px
    bottom 0
    overflow hidden

    section
      -webkit-flex 1
      -ms-flex 1
      flex 1
      display flex
      flex-direction column
      justify-content space-between
      overflow-y auto
      background-color #f1f1f1

      .footer
        height 44px
        line-height 44px
        text-align center
        font-size 12px
        color #999
        background-color #F0F0F0
        box-shadow 4px 4px 40px 0 rgba(0, 0, 0, 0.2)
