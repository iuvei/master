.home
  .el-form--inline .el-form-item
    padding-left 20px
      .el-input
        width 140px

      .el-select
        width 140px

      .el-date-editor
        width 260px

      .el-date-editor--datetimerange
        width 340px

    .el-form--inline .el-form-item
      margin-right 20px

      &:nth-last-child(2)
        margin-right 12px

      &:nth-last-child(1)
        padding-left 0px

.el-table
  flex none
  font-size 12px

  th
    font-weight bold
    color #505050
    background-color #fafafa

  td, th
    padding 4px 0
    font-size 12px

  td:last-child, th:last-child, th:nth-last-child(2)
    border-right none

  tbody tr:last-child td
    border-bottom none

  &.el-table--border
    border 1px solid #dfdfdf

  &:before, &:after
    display none

  // 表头排序的上下箭头样式
  .caret-wrapper
    height 25px

  .sort-caret.ascending
    top 0

  .sort-caret.descending
    bottom 2px

  // 表格中的文字按钮
  .el-button--text
    padding 4px 0

.el-pagination
  padding 15px 20px
  background #fff
  text-align right
  border-width 0 1px 1px 1px
  border-color #dfdfdf
  border-style solid

  .el-pager li
    font-size 12px
    font-weight normal

.el-table__fixed-right::before, .el-table__fixed::before
  display none

.el-dialog__header
  position relative
  text-align center
  background #409EFF
  color #fff
  padding 20px

  .el-dialog__headerbtn
    font-size 20px
    height 32px
    line-height 32px
    top 50%
    margin-top -16px
    padding 0 5px

  .el-dialog__title, .el-dialog__close
    color #fff

.el-dialog__footer
  border-top 1px solid #dfdfdf
  padding 15px 20px
  margin-top -20px

.el-checkbox-group
  margin 0 -8px

.el-checkbox.check-all
  margin 0

.el-checkbox, .el-checkbox+.el-checkbox
  margin 0 8px

// 隐藏日期选择器的关闭按钮
// .el-date-editor .el-range__close-icon
// display none
.el-date-editor .el-range-input
  width 45%

.el-dialog__headerbtn:focus .el-dialog__close, .el-dialog__headerbtn:hover .el-dialog__close
  color #ddd

.el-picker-panel__footer
  .el-button--text
    display none
